<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Ekino\WordpressBundle\Model\Term">
        <field name="name" type="string" length="200" column="name">
            <options>
                <option name="default"/>
            </options>
        </field>
        <field name="slug" type="string" length="200" column="slug" unique="true">
            <options>
                <option name="default"/>
            </options>
        </field>
        <field name="group" type="bigint" length="10" column="term_group">
            <options>
                <option name="default">0</option>
            </options>
        </field>
    </mapped-superclass>
</doctrine-mapping>
